.contact-wrap { min-height: 100vh; background: #fff; } 
.map-control { width: 100%; height: 300px; } 
.contact-group { padding: 20rpx; } 
.contact-group .company-name { font-size: 32rpx; color: #444; margin-bottom: 15rpx; } 
.contact-group .item { display: flex; padding: 15rpx 0; border-bottom: 2rpx solid #f5f5f5; } 
.contact-group .name { flex: 0 0 auto; } 
.contact-group .info { flex: 1; } 
.contact-group .btn-wrap { margin-top: 20rpx; } 
.contact-group .control { display: inline-block; margin-right: 15rpx; width: 80rpx; height: 80rpx; line-height: 80rpx; background: #CACACA; text-align: center; border-radius: 50%; color: #fff; } 
.u-button { padding: 20rpx; } 