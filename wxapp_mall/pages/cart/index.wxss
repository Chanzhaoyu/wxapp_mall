.mallcart { padding-bottom: 100rpx; } 
.mallcart-title { padding: 20rpx; background: #fff; align-items: center; border-bottom: 2rpx solid #f5f5f5; } 
.mallcart-del { width:60rpx; text-align: center; } 
.cart-item { padding:30rpx 20rpx; background: #fff; border-bottom: 2rpx solid #f5f5f5; align-items: center; } 
.cart-img { width: 120rpx; height: 120rpx; display: block; } 
.cart-title { line-height: 140%; } 
.count-set { width:230rpx; border: 2rpx solid #eee; border-radius: 10rpx; } 
.count-set text { display: block; line-height: 60rpx; } 
.buy-couts { border-left: 2rpx solid #eee; border-right: 1px solid #eee; height: 60rpx; } 
.count-set .flase { background: rgba(0, 0, 0, 0.05); color: #999; } 

.mallcart-foot { position: fixed; z-index: 999; left: 0; bottom: 0; width: 100%; height: 100rpx; line-height: 100rpx; background: #fff; border-top:2rpx solid #f5f5f5; } 
.mallcart-foot .radio { padding-left: 20rpx; border-top: 2rpx solid #f5f5f5; } 
.mall-cart-sum { line-height: 18px; padding-top: 5px; } 
.mall-cart-btn { background:#e64340; display: block; color: #fff; padding: 0 30px; border-radius: 0; line-height:100rpx; } 

.sel-wrap { padding: 20rpx; display: flex; align-items: center; } 
.sel-wrap icon { line-height: 0; } 

.no-product { padding: 100rpx; color: rgba(0,0,0,.3); text-shadow:1px 1px 0 #fff; } 
.no-content-icon { font-size:200rpx; line-height:150%; } 
.no-content-font { font-size:40rpx; } 

.control { margin-top: 20rpx; display: flex; justify-content: space-between; } 