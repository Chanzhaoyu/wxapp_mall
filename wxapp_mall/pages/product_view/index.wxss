/* pages/product_view/product_view.wxss */
page, .container { height: 100%; } 
.swiper-wrap { height: 560rpx; } 
.pr-view-main { height: calc(100% - 100rpx); } 

/*产品介绍*/
.basic-info { padding: 20rpx; margin-bottom: 20rpx; background: #fff; } 
.prod-title { color: #333; font-size: 32rpx; height: 120rpx; } 
.prod-title .iconfont { color: #e64340; padding-right: 10rpx; display: none; } 
.prod-price-wrap { display: flex; padding: 10rpx 0; align-items: center; } 
.dis-price { color: #e64340; } 
.dis-price .price { font-size: 46rpx; } 
.ori-price { margin-left: 20rpx; color: #888; text-decoration: line-through; } 
.sales { border-top: 2rpx solid #f5f5f5; padding-top: 20rpx; } 
.sales .item { display: inline-block; width: 50%; } 

.prod-main { padding: 0 20rpx; background: #fff; } 
.prod-main .caption { line-height: 90rpx; border-bottom: 2rpx solid #f5f5f5; } 
.prod-main .con { padding: 20rpx 0; } 
.prod-main .con text { margin-bottom: 20rpx; line-height: 1.8; } 
.prod-main .con image { width: 100%; vertical-align: top; } 

/*添加购物车*/
.add-cart-box { z-index: 999; } 
.mask { position: absolute; left: 0; top: 0; right: 0; bottom: 0; background:rgba(0,0,0,0.6); z-index: 1; } 
.layout { position: absolute; left: 0; bottom: 0; width: 100%; background: #fff; z-index: 2; } 
.close-wrap .close-btn { display: inline-block; width: 80rpx; text-align: center; font-size: 32px; color: #a6a6a6; } 
.layout-info { display: flex; padding: 20rpx; border-top: 2rpx solid #f6f6f6; border-bottom: 2rpx solid #f6f6f6; } 
.layout-info image { width: 100rpx; height: 100rpx; overflow: hidden; margin-right: 20rpx; } 
.layout-info .pr-intro { flex: 1; } 
.pr-intro .title { max-height: 90rpx; color: #333; } 
.pr-intro .price { font-size: 32rpx; padding-top:10rpx; } 
.options { padding: 0 20rpx; } 
.options-tiem { display: flex; padding: 30rpx 0; justify-content: space-between; align-items: center; } 
.buy-num { flex: 1; } 
.count-set { border:1px solid #eee; display: flex; border-radius:10rpx; } 
.count-set .sub { flex: 1; } 
.count-set .sub text { line-height:30px; padding:0 30rpx; color: #666; } 
.count-set .sub .buy-couts { border-left:2rpx solid #eee; border-right:2rpx solid #eee; width:120rpx; height:60rpx; text-align: center; } 
.add-cart-btn { background:#e64340; color:#fff; border-radius:0; } 

/*底部按钮*/
.art-concern-btm { height: 100rpx; display: flex; align-items: center; background: #fff; overflow: hidden; } 
.concern-cart { width: 50%; height: 100rpx; } 
.concern-cart .item { display: inline-block; text-align: center; width: 50%; height: 100rpx; padding-top: 15rpx; box-sizing: border-box; color: #333; position: relative; } 
.kf-line { color: #e64340; } 
.concern-cart .item:first-child { border-right: 2rpx solid #f5f5f5; } 
.concern-cart .iconfont { line-height: 1; } 
.concern-cart .count { position: absolute; top: 8rpx; right: 40rpx; display: inline-block; padding: 0 8rpx; background: #e64340; color: #fff; border-radius: 16rpx; font-size: 20rpx; } 
.add-cart { flex: 1; height: 100rpx; line-height: 100rpx; font-size: 36rpx; text-align: center; background: #e64340; color: #fff; } 

.tool-wrap { position: fixed; right: 20rpx; bottom: 20%; } 
.tool-item { width: 80rpx; height: 80rpx; line-height: 80rpx; margin-bottom: 20rpx; text-align: center; border-radius: 50%; background: #e64340; color: #fff;} 